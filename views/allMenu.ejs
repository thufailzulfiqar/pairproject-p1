<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HackFood</title>
</head>
<body style="background-image: url(https://static.vecteezy.com/system/resources/previews/015/710/948/non_2x/abstract-background-texture-art-orange-and-yellow-colors-watercolor-painting-on-canvas-with-soft-red-gradient-free-vector.jpg); background-size: cover; background-position: center; min-height: 100vh;">
  <%- include('navbar.ejs') %>
  
  <div class="sticky-top">
    <nav id="navbar-example2" class="navbar bg-warning mb-3 w-100">
      <div class="container sticky-top"></div>
      <div class="w-100 d-flex justify-content-center">
        <ul class="nav nav-pills">
          <% dataCategory.forEach(element => { %>
            <li class="nav-item">
              <a style="font-size: 25px; margin-left: 30px; margin-right: 30px; " class="nav-link" href="#<%= element.nameCat %>"><strong><%= element.nameCat %></strong></a>
            </li>
          <% }) %>
            </ul>
          </li>
        </ul>
      </div>
    </nav>
  </div>
  </div>
  <div data-bs-spy="scroll" data-bs-target="#navbar-example2" data-bs-root-margin="0px 0px -40%" data-bs-smooth-scroll="true" class="scrollspy-example bg-transparent p-3 rounded-2" tabindex="0">
       <div class="container">
        <div class="container" style="text-align: center; margin-bottom: 20px  ;">
          <a href="/allMenu/addItem" class="btn btn-danger" style="font-size: 25px;">Add Menu</a>
        </div>
        <% dataCategory.forEach(element => { %>
          <h4 style="margin-top: 30px; margin-bottom: 40px; text-align: center; font-size: 40px; color: white; " id="<%= element.nameCat %>"><%= element.nameCat %></h4>
          <div class="row row-cols-1 row-cols-md-4 g-5">
            <% data.forEach(el => { %>
              <% if (el.CategoryId === element.id) { %>
                <div class="col">
                  <div class="card" style="width: 300px; height: 580px; text-align: center; ">
                    <img style="height: 300px; width: 298px;" src="<%= el.imageUrl %>" class="card-img-top" alt="...">
                    <div class="card-body">
                      <h5 class="card-title"><%= el.nameItem %></h5>
                      <p class="card-text"><%= el.description %></p>
                      <p class="card-text"><strong>Price: <%= formatRP(el.price) %></strong></p>
                      <a href="/allMenu/<%= el.id %>/edit" class="btn btn-warning">Edit</a>
                      <a href="/allMenu/<%= el.id %>/delete" class="btn btn-danger">Delete</a>
                    </div>
                 </div>
                </div>
              <% } %>
              <% }) %>
            </div>
         <% }) %>
       </div>

       
  
    <%- include('link.ejs') %>
</body>
</html>